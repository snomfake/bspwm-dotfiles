# terminal
super + Return
  kitty

# screenshot
@Print
  flameshot gui

# mute volume
XF86AudioMute
  $HOME/.config/bspwm/volume.sh mute

# down volume
XF86AudioLowerVolume
  $HOME/.config/bspwm/volume.sh down

# up volume
XF86AudioRaiseVolume
  $HOME/.config/bspwm/volume.sh up

# file manager
super + e
  thunar

# launcher
super + p
  rofi -show drun

# restart sxhkd
super + r
  pkill -USR1 -x sxhkd

# change status to tiled/floating
super + {t,f}
	bspc node -t {tiled,floating}
	bspc node -g {marked,sticky}

# open the window
super + alt + {h,j,k,l}
	bspc node -p {west,south,north,east}

# undo open the window
super + space
	bspc node -p cancel

# quit/restart bspwm
super + ctrl + {q,r}
  bspc {quit,wm -r}

# change/moving workspace
super + {_,shift + }{1-9,0}
  bspc {desktop -f,node -d} '^{1-9,10}'

# close/kill window
super + {_, shift + }w
	bspc node -{c}

# moving tiled window
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# resize tailed window
super + ctrl + {h,j,k,l}
	{bspc node -z left -20 0; bspc node -z right -20 0, \
	bspc node -z bottom 0 20; bspc node -z top 0 20, \
	bspc node -z bottom 0 -20; bspc node -z top 0 -20, \ 
	bspc node -z left 20 0; bspc node -z right 20 0}
